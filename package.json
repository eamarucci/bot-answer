{
  "name": "botanswer",
  "version": "1.0.0",
  "private": true,
  "description": "BotAnswer - Matrix bot with multi-tenant API keys",
  "scripts": {
    "dev:bot": "pnpm --filter @botanswer/bot dev",
    "dev:web": "pnpm --filter @botanswer/web dev",
    "build": "pnpm -r build",
    "build:bot": "pnpm --filter @botanswer/bot build",
    "build:web": "pnpm --filter @botanswer/web build",
    "typecheck": "pnpm -r typecheck",
    "db:generate": "pnpm --filter @botanswer/database generate",
    "db:push": "pnpm --filter @botanswer/database push",
    "db:migrate": "pnpm --filter @botanswer/database migrate"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@openauthjs/openauth": "^0.4.3",
    "jose": "^6.1.3"
  }
}
