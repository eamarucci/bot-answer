# Matrix Configuration
MATRIX_HOMESERVER_URL=https://matrix.marucci.cloud
MATRIX_ACCESS_TOKEN=syt_xxxxxxxxxxxxx
MATRIX_USER_ID=@bot-answer:matrix.marucci.cloud

# OpenRouter Configuration
OPENROUTER_API_KEY=sk-or-v1-xxxxxxxxxxxxx
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Default Model (alias: auto, deepseek, llama, vision)
DEFAULT_MODEL=openrouter/free
VISION_MODEL=nvidia/nemotron-nano-12b-v2-vl:free

# System Prompts
# BASE_SYSTEM_PROMPT = regras fixas de formatacao (nao editavel pelo usuario)
BASE_SYSTEM_PROMPT=LIMITE ABSOLUTO: 4 frases. PROIBIDO: listas, bullets, enumeracoes, mais de 4 frases. Se a resposta exigir mais, resuma ou pergunte o que o usuario quer saber especificamente. Seja direto. Portugues.
# DEFAULT_SYSTEM_PROMPT = contexto padrao (editavel via /ia -prompt)
DEFAULT_SYSTEM_PROMPT=Voce e um assistente de chat prestativo.

# LLM Settings
MAX_TOKENS=2000
TIMEOUT_MS=60000
INCLUDE_REASONING=false

# Context Settings
CONTEXT_MAX_MESSAGES=10
CONTEXT_MAX_AGE_MINUTES=30

# Bot Settings
COMMAND_PREFIX=/ia
LOG_LEVEL=info

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/botanswer
MAUTRIX_DATABASE_URL=postgresql://user:password@localhost:5432/mautrix_whatsapp

# Security (generate with: openssl rand -hex 32)
ENCRYPTION_KEY=your-32-byte-hex-key
JWT_SECRET=your-jwt-secret

# Web App
NEXT_PUBLIC_APP_URL=https://bot-answer.marucci.cloud
BOT_API_URL=http://localhost:3001
BOT_API_PORT=3001
